<div class="hero">
  <div class="hero-body">
    <h1>Welcome Back!</h1>
    {{#if errorMessages.length}}
      <p>Could not log in because:</p>
      <ul>
        {{#each errorMessages}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{/if}}
    <form action="" method="post">
      <div class="container-forms">
        <div class="form-group">
          <label class="form-label" for="input-example-1">Enter Username:</label>
          <input
            class="form-input"
            type="text"
            name="username"
            placeholder="username"
          />
        </div>
        <div class="form-group">
          <label class="form-label" for="input-example-1">Enter Password:</label>
          <input
            class="form-input"
            type="password"
            name="password"
            placeholder="password"
          />
        </div>
      </div>
      <input class="bg-dark" type="submit" value="Log In" />
    </form>
  </div>
</div>